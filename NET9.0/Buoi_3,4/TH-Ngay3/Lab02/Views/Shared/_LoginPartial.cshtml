@using Microsoft.AspNetCore.Identity

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
    @if (User.Identity.IsAuthenticated)
    {
        <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new{area = ""})">
            <button type="submit" class="btn btn-danger btn-auth d-inline-block w-auto">Đăng xuất</button>
        </form>
    }
    else
    {
        <div class="d-flex justify-content-center mt-3">
            <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-primary btn-auth d-inline-block w-auto me-2">Đăng nhập</a>
            <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-success btn-auth d-inline-block w-auto">Đăng ký</a>
        </div>
    }


</ul>
