@model Lab02.Models.Product

@{
    ViewData["Title"] = "Display";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Display</h1>

<div>
    <h4>Product</h4>
    <div>
        <h3>Price: @Model.Price</h3>
        <p>@Model.Description</p>
        @if (!string.IsNullOrEmpty(Model.ImageUrl))
        {
            <img src="@Model.ImageUrl" alt="Product Image" style="max-width: 200px;" />
        }
    </div>
</div>
<div>
    <a href="@Url.Action("Update", "Product", new { area = "Admin", id = Model?.Id})" class="btn btn-primary">Edit</a>
    <a href="@Url.Action("Index", "Product", new { area = "Admin" })" class="btn btn-primary">Back to List</a>
</div>
